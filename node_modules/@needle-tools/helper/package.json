{
  "name": "@needle-tools/helper",
  "version": "1.10.1",
  "type": "module",
  "bin": {
    "needle-helper": "dist/cli/index.js"
  },
  "imports": {
    "#package.json": "./package.json"
  },
  "scripts": {
    "tsc": "tsc",
    "dev": "npm-watch compile",
    "compile": "tsc & exit 1",
    "publish": "npm run tsc && npm publish",
    "tool:copy-recursive": "node dist/scripts/copy-from-to",
    "tool:generate-font-atlas": "node dist/scripts/generate-font-atlas",
    "tool:generate-unfurl-image": "node dist/scripts/generate-unfurl-image",
    "tool:upload-to-glitch": "node dist/scripts/upload-to-glitch",
    "tool:upload-ftp": "node dist/scripts/upload-ftp",
    "tool:upload-to-needle": "node dist/scripts/upload-to-needle",
    "tool:publish-to-github-pages": "node dist/scripts/publish-to-github-pages",
    "tool:install-packages": "node dist/scripts/install-packages",
    "tool:kill-other-vite-processes": "node dist/scripts/kill-other-vite-processes",
    "tool:kill-processes": "node dist/scripts/kill-processes",
    "tool:update-packages": "node dist/scripts/update-package",
    "tool:update-types-three": "node dist/scripts/update-types-three",
    "tool:zip": "node dist/scripts/zip",
    "tool:generate-bugreport": "node dist/scripts/generate-bugreport",
    "tool:upload-bugreport": "node dist/scripts/upload-bugreport",
    "tool:git-clone": "node dist/scripts/git-clone",
    "tool:share": "node dist/scripts/share",
    "workflow:deploy-to-glitch": "node dist/scripts/workflows-deploy-to-glitch",
    "internal:stats": "howfat ."
  },
  "author": {
    "name": "Needle",
    "email": "help@needle.tools",
    "url": "https://needle.tools/"
  },
  "bugs": {
    "url": "https://github.com/needle-tools/needle-engine-tools/issues"
  },
  "homepage": "https://github.com/needle-tools/needle-engine-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/needle-tools/needle-engine-tools.git"
  },
  "dependencies": {
    "@caporal/core": "^2.0.7",
    "@donmccurdy/caporal": "^0.0.10",
    "@needle-tools/needle-component-compiler": "^1.0.0",
    "archiver": "^5.3.1",
    "basic-ftp": "^5.0.5",
    "command-line-args": "^5.2.1",
    "find-process": "^1.4.7",
    "form-data": "^4.0.0",
    "ftp-deploy": "^2.4.4",
    "msdf-bmfont-xml": "^2.7.0",
    "node-fetch": "^3.3.1",
    "node-stream-zip": "^1.15.0",
    "request": "^2.88.2",
    "shelljs": "^0.8.5"
  },
  "optionalDependencies": {
    "ultimate-text-to-image": "^1.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/command-line-args": "^5.2.0",
    "@types/node": "^18.7.18",
    "@types/shelljs": "^0.8.11",
    "howfat": "^0.3.7",
    "npm-watch": "^0.13.0",
    "typescript": "^4.8.4"
  },
  "watch": {
    "compile": {
      "patterns": [
        "src/**/*.ts"
      ],
      "ignore": "src/test.ts",
      "extensions": "ts",
      "quiet": false
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
